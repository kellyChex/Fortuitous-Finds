<% if !@search.nil? && !@search.nil? %>
    <h3>Results(s) found:</h3>
    <br>
    <div class="center">
      <div class="row">
        <% @search.each do |listing| %>
          <div class="col-md-3">
            <div class="thumbnail">
              <%= link_to image_tag(listing.image.url), listing %>
              <div class="caption">
                <h3><%= listing.name %></h3>
                <p><%= number_to_currency(listing.price) %></p>
                <p><%= "#{listing.user.name}" %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

<% else %>
    <h3>No Results Found</h3>
<% end %>
